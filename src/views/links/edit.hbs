<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/links/edit/{{link.id}}" method="POST">
            <div class="form-group">
              <input type="text" name="title" class="form-control" placeholder="Título" autofocus="autofocus" value="{{link.title}}">
            </div>

            <div class="form-group">
              <input type="url" name="url" class="form-control" placeholder="Url" value="{{link.url}}">
            </div>

            <div class="form-group">
              <textarea name="description" rows="2" class="form-control" placeholder="Descripción">{{ link.description }}</textarea>
            </div>

            <div class="form-group">
              <input type="submit" class="btn btn-success btn-block" value="Guardar">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>